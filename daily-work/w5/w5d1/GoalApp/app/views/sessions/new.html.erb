<h2>Sign In</h2>

<form action="<%= session_path %>" method="post">
  <%= auth_token %>

  <label> Username:
    <input type="text" name="user[username]" id="username" value="<%= @user.username if @user %>">
  </label>

  <label> Password:
    <input type="password" name="user[password]" id="password">
  </label>

  <input type="submit" value="Sign In!!!!">
</form>
